<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyGroupActivityV2">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/studyGroupNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="35dp"
            android:ems="10"
            android:hint="Study Group Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/addStudyGroupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/studyGroupNameEditText"
            android:layout_toEndOf="@+id/studyGroupNameEditText"
            android:background="@color/gold"
            android:text="Add Group" />

        <ListView
            android:id="@+id/studyGroupListView"
            android:layout_width="match_parent"
            android:layout_height="424dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>