<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.example.slmns.ksustudyroom.LogInActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/loginUsernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:fadingEdge="none"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/loginPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/loginUsernameText"
            android:layout_below="@+id/loginUsernameText"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/loginPasswordText"
            android:layout_alignLeft="@+id/loginPasswordText"
            android:layout_alignRight="@+id/loginPasswordText"
            android:layout_alignStart="@+id/loginPasswordText"
            android:layout_below="@+id/loginPasswordText"
            android:layout_marginTop="30dp"
            android:text="Login" />

        <TextView
            android:id="@+id/loginRegisterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="Register here"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorLink="@color/colorPrimary" />

        <TextView
            android:id="@+id/loginToHomeLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/loginRegisterTextView"
            android:layout_below="@+id/loginRegisterTextView"
            android:layout_marginTop="57dp"
            android:text="TextView"
            android:visibility="invisible"
            tools:text="To Home Page" />

        <TextView
            android:id="@+id/invalidLoginUserNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginUsernameText"
            android:layout_centerHorizontal="true"
            android:text="Missing username"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/invalidLoginPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/invalidLoginUserNameLabel"
            android:layout_below="@+id/loginPasswordText"
            android:text="Missing password"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/toStudyGroupLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/loginToHomeLink"
            android:layout_centerHorizontal="true"
            android:text="(Temporary) To Start Study Group Page" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
